<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="20dp">

    <!-- Titre -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diagrammes Statistiques"
        android:textColor="@color/texte"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Sélecteur de type de diagramme -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleGroupDiagrammes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:singleSelection="true"
        app:checkedButton="@id/btnColumn">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnColumn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Colonnes"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/btnPie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Camembert"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLine"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lignes"
            android:textAllCaps="false" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Zone d'affichage du diagramme -->
    <ImageView
        android:id="@+id/ivDiagramme"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        android:background="@color/card_background"
        android:scaleType="centerInside"
        android:contentDescription="Diagramme statistique" />

    <!-- Légende -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@color/green"
            android:layout_marginEnd="4dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrées"
            android:textSize="12sp"
            android:layout_marginEnd="12dp" />

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@color/red"
            android:layout_marginEnd="4dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sorties"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Bouton fermer -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFermerDiagrammes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fermer"
        android:textColor="@color/white"
        app:backgroundTint="@color/accent" />

</LinearLayout>