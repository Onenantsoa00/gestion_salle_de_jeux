<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashboard_background"
    android:fillViewport="true"
    android:padding="16dp"
    tools:context=".ui.finance.FinanceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- En-tête -->
        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestion des Finances"
            android:textColor="@color/dashboard_text_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_header_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="7 Jours"
            android:textColor="@color/dashboard_text_secondary"
            android:textSize="14sp" />

        <!-- Carte Solde Semaine -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/dashboard_green_light"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_weekly_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dashboard_text_primary"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    tools:text="290 400 Ariary" />

                <TextView
                    android:id="@+id/tv_weekly_profit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dashboard_green"
                    android:textSize="18sp"
                    tools:text="30 000 Ariary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Cartes Résumé (Boss, Materiel, Jeton) -->
        <!-- C'EST ICI QUE LES CORRECTIONS SONT AJOUTÉES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/dashboard_green_light"
                app:cardCornerRadius="16dp">
                <LinearLayout
                    style="@style/FinanceSummaryCardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/FinanceSummaryCardTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Boss" />
                    <TextView
                        android:id="@+id/tv_boss_balance"
                        style="@style/FinanceSummaryCardAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="96 800 Ar"/>
                    <TextView
                        android:id="@+id/tv_boss_change"
                        style="@style/FinanceSummaryCardChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="10 000 Ar"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/dashboard_red_light"
                app:cardCornerRadius="16dp">
                <LinearLayout
                    style="@style/FinanceSummaryCardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/FinanceSummaryCardTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Materiel" />
                    <TextView
                        android:id="@+id/tv_materiel_balance"
                        style="@style/FinanceSummaryCardAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="96 800 Ar"/>
                    <TextView
                        android:id="@+id/tv_materiel_change"
                        style="@style/FinanceSummaryCardChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="10 000 Ar"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/dashboard_blue_light"
                app:cardCornerRadius="16dp">
                <LinearLayout
                    style="@style/FinanceSummaryCardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/FinanceSummaryCardTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jeton" />
                    <TextView
                        android:id="@+id/tv_jeton_balance"
                        style="@style/FinanceSummaryCardAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="96 800 Ar"/>
                    <TextView
                        android:id="@+id/tv_jeton_change"
                        style="@style/FinanceSummaryCardChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="10 000 Ar"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Toggles Période -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggle_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:checkedButton="@id/btn_period_month"
            app:singleSelection="true">

            <Button
                android:id="@+id/btn_period_day"
                style="@style/Widget.App.Button.Toggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jours" />

            <Button
                android:id="@+id/btn_period_month"
                style="@style/Widget.App.Button.Toggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mois" />

            <Button
                android:id="@+id/btn_period_year"
                style="@style/Widget.App.Button.Toggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Année" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- Graphique -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp" />

        <!-- Formulaire Dépense -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Dépense"
            android:textColor="@color/dashboard_text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- C'EST ICI QUE LES CORRECTIONS SONT ÉGALEMENT APPORTÉES -->
        <EditText
            android:id="@+id/et_amount"
            style="@style/FinanceFormEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Montant"
            android:inputType="numberDecimal" />

        <AutoCompleteTextView
            android:id="@+id/et_source"
            style="@style/FinanceFormEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Retirer de" />

        <EditText
            android:id="@+id/et_description"
            style="@style/FinanceFormEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_date"
            style="@style/FinanceFormEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date"
            android:focusable="false" />

        <!-- Boutons Formulaire -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_validate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_finance_button_cyan"
                android:text="Valider"
                android:textColor="@color/dashboard_text_primary"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_finance_button_dark"
                android:text="Détaille"
                android:textColor="@color/dashboard_text_primary"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Carte Solde Total -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/dashboard_red_light"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/tv_total_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="20dp"
                android:textColor="@color/dashboard_text_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="12 290 400 Ariary" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>